{% extends 'base.html.twig' %}

{% block title %}Spend Show{% endblock %}

{% block body %}


    <div id="header" class="jumbotron">
        <h1>Dépense/Sortie</h1>
        <a class="btn btn-primary btn-lg" href="{{ path('spend_index') }}">
            <i class="glyphicon glyphicon-chevron-left"></i>
            Retour à la liste
        </a>
     </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-8">

                <table class="table table-hover">
                    <tbody>
                    {#<tr>
                        <th>Id</th>
                        <td>{{ spend.id }}</td>
                    </tr>#}
                    <tr>
                        <th>Type</th>
                        <td>{{ spend.spendType }}</td>
                    </tr>
                    <tr>
                        <th>Date</th>
                        <td>{% if spend.spendDate %}{{ spend.spendDate|date('m-d-Y') }}{% endif %}</td>
                    </tr>
                    <tr>
                        <th>Montant des dépenses</th>
                        <td>{{ spend.spendMontant }}</td>
                    </tr>
                    <tr>
                        <th>Paiement groupé</th>
                        <td>{% if spend.spendGroupIndiv %}Oui{% else %}Non{% endif %}</td>
                    </tr>
                    <tr>
                        <th>Photo</th>
                        {#<td>{{ spend.spendPhoto }}</td>#}
                        <td><img class="image_spend" src="{{ asset('uploads/photosSpends/') }}{{ spend.spendPhoto }}">
                        </td>
                    </tr>
                    </tbody>
                </table>

                <div class="col-lg-4">
                    <ul class="nopuce">
                        <li>
                            <a href="{{ path('spend_edit', { 'id': spend.id }) }}" class="btn btn-success">
                                <i class="glyphicon glyphicon-edit"></i>
                                Modifier l'annonce
                            </a>
                        </li>
                        <li>
                            {{ form_start(delete_form) }}
                            <button type="submit" class="btn btn-danger">
                                <i class="glyphicon glyphicon-trash"></i>
                                Supprimer l'annonce
                            </button>
                            {{ form_end(delete_form) }}
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
