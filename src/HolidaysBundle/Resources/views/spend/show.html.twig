{% extends 'base.html.twig' %}

{% block title %}Spend Show{% endblock %}

{% block body %}

    <h1 class="jumbotron">Spend</h1>
    <div class="row">
        <div class="col-lg-8">

            <table class="table table-hover">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ spend.id }}</td>
                </tr>
                <tr>
                    <th>Spendtype</th>
                    <td>{{ spend.spendType }}</td>
                </tr>
                <tr>
                    <th>Spenddate</th>
                    <td>{% if spend.spendDate %}{{ spend.spendDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                </tr>
                <tr>
                    <th>Spendmontant</th>
                    <td>{{ spend.spendMontant }}</td>
                </tr>
                <tr>
                    <th>Spendgroupindiv</th>
                    <td>{% if spend.spendGroupIndiv %}Yes{% else %}No{% endif %}</td>
                </tr>
                <tr>
                    <th>Spendphoto</th>
                    {#<td>{{ spend.spendPhoto }}</td>#}
                    <td><img class="image_spend" src="{{ asset('uploads/photosSpends/') }}{{ spend.spendPhoto }}">
                    </td>
                </tr>
                </tbody>
            </table>

            <div class="col-lg-4">
                <ul class="nopuce">
                    <li>
                        <a href="{{ path('spend_index') }}">Back to the list</a>
                    </li>
                    <li>
                        <a href="{{ path('spend_edit', { 'id': spend.id }) }}">Edit</a>
                    </li>
                    <li>
                        {{ form_start(delete_form) }}
                        <input type="submit" value="Delete">
                        {{ form_end(delete_form) }}
                    </li>
                </ul>
            </div>
        </div>
    </div>

{% endblock %}
